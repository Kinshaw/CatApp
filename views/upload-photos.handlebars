<!-- views/upload-photo.handlebars -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Photo - PurrPal</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/jass.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <header>
    <h1>Upload Photo</h1>
  </header>
  <nav>
    <a href="/">Home</a>
    {{#if loggedIn}}
      <button id="logout" class="btn-no-style">Logout</button>
      <a href="/upload-photo" class="btn btn-primary">Upload Photo</a>
    {{else}}
      <a href="/login">Login</a>
      <a href="/signup">Sign Up</a>
    {{/if}}
  </nav>
  <main>
    <div class="container">
      <h2>Upload a New Photo</h2>
      <form action="/photos" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="caption">Caption</label>
          <input type="text" id="caption" name="caption" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="photo">Select Photo</label>
          <input type="file" id="photo" name="photo" class="form-control-file" accept="image/*" required>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
    </div>
  </main>

  {{#if loggedIn}}
    <script src="/js/logout.js"></script>
  {{/if}}

  <!-- Include Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
